<div class="container">
  <h2 class="title-lg"><%= display_hashtag(@hashtag.name) %></h2>
</div>

<% @hashtag.questions.each do |question| %>
  <div class="mt-sm container">
    <p class="mb text-sm text-grey">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
      для юзера <%= link_to "#{display_nickname(question.user)}",
        user_path(question.user) %>
    </p>
    <%= render question %>
  </div>
<% end %>
