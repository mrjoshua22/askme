<div class="container">
  <h2 class="title-lg mb">Вопросы</h2>
  <% @questions.each do |question| %>
    <p class="mb "><%= link_to "Вопрос #{question.id}", question_path(question),
      class: class_names(hidden: question.hidden?) %></p>
  <% end %>

  <p class="mt">
    <%= link_to 'Создать новый вопрос', new_question_path, class: 'button button-main' %>
  </p>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>
